@model IEnumerable<DoinikSokal.Models.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    int sl = 1;
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-bordered table-striped" id="myTable">
    <thead>
    <tr>
        <th>
            @Html.Raw("SL")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.Raw("Image")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(sl++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="@Url.Content("~/PostImages/" + item.ImagePath)" style="height: 80px; width: 80px;"/>
                </td>
                <td>

                    @Html.Raw(item.Description.Length > 50 ? item.Description.Substring(0, 50) : item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tags)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditPost", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {onclick = "return confirm('Are You Sure? You Want To Delete!')"})
                </td>
            </tr>
        }
    </tbody>
</table>


